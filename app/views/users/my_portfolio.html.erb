<h1>My Portfolio</h1>

<h3 class="mt-5">Search stocks</h3>
<%= form_tag search_stock_path, remote: false, method: :get do %>
  <div class="row">
    <div class="col-sm-9 no-right-padding">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
        <%= fa_icon 'search 2x' %>
      <% end %>
    </div>
  </div>
<% end %>
<div id="results">

</div>
<% if @stock %>
  <div class="card card-header results-block mt-3">
    <strong>Symbol: </strong><%= @stock.ticker %>
    <strong>Name: </strong><%= @stock.name %>
    <strong>Price: </strong><%= @stock.last_price %>
  </div>
<% end %>