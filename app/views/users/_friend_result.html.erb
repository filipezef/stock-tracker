<div class="results-block">
  <%= render 'layouts/messages' %>  
</div>

<% if @friends %>
  <div class="card card-header results-block col-md-9">
    <table>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong><%= friend.full_name %></td>
            <td><strong>Email: </strong><%= friend.email %></td>
            <td><%= link_to 'Profile', user_path(friend), class: "btn btn-sm btn-success" %>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to 'Follow?', friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span class="badge bg-secondary">
                  You are friends
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>