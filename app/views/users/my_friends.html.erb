<h1>My Friends</h1>

<h3 class="mt-5">Search friends</h3>
<%= form_tag search_friend_path, remote: true, method: :get do %>
  <div class="row">
    <div class="col-sm-9 no-right-padding">
      <%= text_field_tag :friend, params[:friend], placeholder: "Enter the friend name or email", autofocus: true, class: "form-control form-control-lg" %>
    </div>
    <div class="col-sm-3 no-left-padding">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
        <%= fa_icon 'search 2x' %>
      <% end %>
    </div>
  </div>
<% end %>
<div id="results">

</div>
<% if !@my_friends.nil? %>
  <%= render 'friends/list' %>
<% end %>

