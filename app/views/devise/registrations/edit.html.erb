<%= render "devise/shared/error_messages", resource: resource %>

<div class="row justify-content-center">
  <div class="col-8 my-4">
    <h1 class="text-white mb-4"><%= t('.edit_profile', resource: resource_name.to_s.humanize) %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="row g-3">
        <div class="col-md-6">
          <%= f.label :first_name, class: 'text-white mb-1' %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: 'first-name', class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :last_name, class: 'text-white mb-1' %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: 'last-name', class: 'form-control' %>
        </div>

        <div class="col-12">
          <%= f.label :email, class: 'text-white mb-1' %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="col-12">
          <%= f.label :password, class: 'text-white mb-1' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <small class="form-text text-white"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
          <small class="form-text text-white"><% if @minimum_password_length %>
            <em class='text-white'>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %></small>
        </div>
        <div class="col-12">
          <%= f.label :password_confirmation, class: 'text-white mb-1' %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password-confirmation', class: 'form-control'  %>
          <small class="form-text text-white"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
        </div>
        <div class="col-12">
          <%= f.label :current_password, class: 'text-white mb-1' %>
          <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
          <small class="form-text text-white"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
        </div>
        <div class="col-12">
          <%= f.submit 'Update', class: 'btn btn-primary' %>
        </div>
        
        <p class='text-white'>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: 'text-white', method: :delete %></p>
        <%= link_to "Back", :back, class: 'text-white' %>

      </div>
    <% end %>
  </div>
</div>
